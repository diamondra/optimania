{% set terms = terms_slider %}
<div id="carousel_accueil" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
      {% for key,value in terms %}
          {% if key == 0 %}
            <div class="carousel-item active">
          {% else %}
            <div class="carousel-item">
          {% endif %}
              <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6 col-6" style="text-align: center; vertical-align: middle; padding-top: 5%;">
                  <div style="margin: 5%;">
                    <h4 class="chef-accueil-slider">Dirigeants et chef d'entreprise</h4>
                  </div>
                  <div>
                    <h3 class="liberez_du_temps">Lib√©rez du temps!</h3>
                  </div>
                  <ul class="banner-point">
                      {% for text in terms[key].texte %}
                          <li class="item-slide"><span>{{ text.properties.value.value }}</span></li>
                      {% endfor %}
                  </ul>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-6 col-6">
                 {#<svg width="100" height="auto" viewbox="0 0 100 100" preserveAspectRatio="none" style="position: absolute">
                    <path d="M0,0
                     L100,0
                     C25,50 50,75 0,100z" fill="#ffc000" />
                  </svg>#}
                  <div class="image_slider_accueil" style="background-image: url({{ value.image_url }});" alt="{{ value.tname }}"></div>

                </div>
              </div>
            </div>

      {% endfor %}
  </div>
  <a class="carousel-control-prev" href="#carousel_accueil" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel_accueil" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>